{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "lib": ["DOM", "ES2020"],
    "moduleResolution": "nodenext",
    "allowJs": false,
    "checkJs": false,
    "strict": true, // <--- most important!
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true, // <--- helps catch missing imports!
    "types": ["svelte", "vite/client", "tailwindcss"],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.svelte"
  ],
  "exclude": ["node_modules/*", "dist/*"]
}